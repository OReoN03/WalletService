<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">

    <changeSet id="createPlayerSequence" author="OReoN_03">
        <createSequence sequenceName="player_sequence" incrementBy="1" minValue="1"/>
    </changeSet>

    <changeSet id="createPlayerTable" author="OReoN_03">
        <createTable tableName="player">
            <column name="id" type="bigint" defaultValueSequenceNext="player_sequence">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="password" type="varchar(255)"/>
            <column name="balance" type="numeric"/>
        </createTable>
    </changeSet>

    <changeSet id="createTransactionSequence" author="OReoN_03">
        <createSequence sequenceName="transaction_sequence" incrementBy="1" minValue="1"/>
    </changeSet>

    <changeSet id="createTransactionTable" author="OReoN_03">
        <createTable tableName="transaction">
            <column name="id" type="bigint" defaultValueSequenceNext="transaction_sequence">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="amount" type="numeric">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="player_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="datetime" type="timestamp">
                <constraints nullable="false"/>
            </column>

            <constraints>
                <foreignKeyConstraint foreignTableName="player" baseColumnNames="player_id" referencedTableName="player" referencedColumnNames="id"/>
            </constraints>
        </createTable>
    </changeSet>

</databaseChangeLog>